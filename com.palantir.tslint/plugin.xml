<plugin>
	 <extension
	    id="tslintBuilder" name="TSLint Project Builder" point="org.eclipse.core.resources.builders">
	    <builder
	          hasNature="true">
	       <run
	             class="com.palantir.tslint.Builder">
	       </run>
	    </builder>
	 </extension>

     <extension
           id="tslintProblem"
           name="TSLint Problem"
           point="org.eclipse.core.resources.markers">
        <super
              type="org.eclipse.core.resources.problemmarker">
        </super>
        <persistent
              value="true">
        </persistent>
     </extension>
   <extension point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
         markerType="com.palantir.tslint.tslintProblem"
         class="com.palantir.tslint.fix.QuickFixer"/>
   </extension>
   
     <extension
           id="tslintNature"
           name="TSLint Project Nature"
           point="org.eclipse.core.resources.natures">
        <runtime>
           <run
                 class="com.palantir.tslint.ProjectNature">
           </run>
        </runtime>
        <builder
              id="com.palantir.tslint.tslintBuilder">
        </builder>
     </extension>

     <extension
           point="org.eclipse.ui.commands">
        <category
              id="com.palantir.tslint.tslintNature.category"
              name="TSLint Project Nature commands">
        </category>
        <command
              categoryId="com.palantir.tslint.tslintNature.category"
              defaultHandler="com.palantir.tslint.ToggleNatureHandler"
              id="com.palantir.tslint.toggleNature"
              name="Toggle Project Nature">
        </command>
     </extension>

     <extension
           point="org.eclipse.ui.menus">
        <menuContribution
              locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
           <command
                 commandId="com.palantir.tslint.toggleNature"
                 label="Disable TSLint Builder"
                 style="push">
              <visibleWhen
                    checkEnabled="false">
                 <with
                       variable="selection">
                    <count
                          value="1">
                    </count>
                    <iterate>
                      <adapt
                        type="org.eclipse.core.resources.IProject">
                        <and>
                            <instanceof
                                  value="org.eclipse.core.resources.IProject">
                            </instanceof>
                            <test
                                  property="org.eclipse.core.resources.projectNature"
                                  value="com.palantir.tslint.tslintNature">
                            </test>
                        </and>
                      </adapt>
                    </iterate>
                 </with>
              </visibleWhen>
           </command>
           <command
                 commandId="com.palantir.tslint.toggleNature"
                 label="Enable TSLint Builder"
                 style="push">
              <visibleWhen
                    checkEnabled="false">
                 <with
                       variable="selection">
                    <count
                          value="1">
                    </count>
                    <iterate>
                      <adapt
                        type="org.eclipse.core.resources.IProject">
                          <and>
                          <instanceof
                                value="org.eclipse.core.resources.IProject">
                          </instanceof>
                          <not>
                              <test
                                   property="org.eclipse.core.resources.projectNature"
                                   value="com.palantir.tslint.tslintNature">
                              </test>
                            </not>
                          </and>
                      </adapt>
                    </iterate>
                 </with>
              </visibleWhen>
           </command>
        </menuContribution>
     </extension>
</plugin>
